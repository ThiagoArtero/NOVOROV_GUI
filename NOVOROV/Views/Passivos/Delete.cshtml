@model NOVOROV.Models.Passivo

@{
    ViewData["Title"] = "Delete";
}


<div>
    <button onclick="goBack()" class="bttn-stretch bttn-md bttn-primary">
        <i class="fas fa-long-arrow-alt-left"></i>
        Voltar
    </button>
</div>

<h4>Tem certeza que deseja Deletar este passivo?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorPassivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorPassivo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorRecuperadoPassivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorRecuperadoPassivo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoRessarcimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoRessarcimento.NomeTipoRessarcimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AreaInterna)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AreaInterna.NomeAreaInterna)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Empresa.NomeEmpresa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Perda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Perda.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
    </form>
</div>


@section Scripts{

    <script type="text/javascript">

        function goBack() {
            window.history.back()
        }

    </script>
}