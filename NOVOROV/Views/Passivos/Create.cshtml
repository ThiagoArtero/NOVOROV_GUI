@model NOVOROV.Models.Passivo

@{
    ViewData["Title"] = "Create";
}

<div>
    <button onclick="location.href='@Url.Action("Edit", "Ocorrencias", new { id = ViewBag.OcorrenciaId })'" class="bttn-stretch bttn-md bttn-primary">
        <i class="fas fa-long-arrow-alt-left"></i>
        Voltar
    </button>
</div>

<h4>Passivo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ValorPassivo" class="control-label"></label>
                <input asp-for="ValorPassivo" class="form-control" />
                <span asp-validation-for="ValorPassivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorRecuperadoPassivo" class="control-label"></label>
                <input asp-for="ValorRecuperadoPassivo" class="form-control" />
                <span asp-validation-for="ValorRecuperadoPassivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoRessarcimentoId" class="control-label"></label>
                <select asp-for="TipoRessarcimentoId" class ="form-control" asp-items="ViewBag.TipoRessarcimentoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AreaInternaId" class="control-label"></label>
                <select asp-for="AreaInternaId" class ="form-control" asp-items="ViewBag.AreaInternaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmpresaId" class="control-label"></label>
                <select asp-for="EmpresaId" class ="form-control" asp-items="ViewBag.EmpresaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

