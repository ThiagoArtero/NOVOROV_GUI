@model NOVOROV.Models.Perda

@{
    ViewData["Title"] = "Delete";
}


<div>
    <button onclick="location.href='@Url.Action("Edit", "Ocorrencias", new { id = ViewBag.OcorrenciaId })'" class="bttn-stretch bttn-md bttn-primary">
        <i class="fas fa-long-arrow-alt-left"></i>
        Voltar
    </button>
</div>

<h4>Tem certeza que deseja deletar essa perda?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroBOSinistroRede)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroBOSinistroRede)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadePerda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadePerda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoSinistro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoSinistro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorPerda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorPerda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorEfetivamenteRecuperado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorEfetivamenteRecuperado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorPerdaEvitada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorPerdaEvitada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ocorrencia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ocorrencia.CEP)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-ocorrenciaId="@ViewBag.OcorrenciaId">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
