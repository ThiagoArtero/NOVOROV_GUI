@model NOVOROV.Models.Envolvido

@{
    ViewData["Title"] = "Deletar Envolvido";
}

<h3>Tem certeza que deseja apagar este envolvido?</h3>
<div>
    <button onclick="location.href='@Url.Action("Edit", "Ocorrencias", new { id = ViewBag.OcorrenciaId })'" class="bttn-stretch bttn-md bttn-primary">
        <i class="fas fa-long-arrow-alt-left"></i>
        Voltar
    </button>
</div>

<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeEnvolvido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeEnvolvido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoEnvolvimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoEnvolvimento.NomeTipoEnvolvimento)
        </dd>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.OcorrenciaId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" asp-route-id=""/>
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
