@model NOVOROV.Models.Biblioteca

@{
    ViewData["Title"] = "Excluindo Biblioteca";
}

<h3>Tem certeza que deseja apagar este biblioteca?</h3>
<div>
    <button onclick="location.href='@Url.Action("Index", "Bibliotecas")'" class="bttn-stretch bttn-md bttn-primary">
        <i class="fas fa-long-arrow-alt-left"></i>
        Voltar
    </button>
</div>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAtualizacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAtualizacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoAnexo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoAnexo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UF)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UF)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnalistaSolicitanteId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnalistaSolicitanteId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeAnexo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeAnexo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoBiblioteca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoBiblioteca.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
    </form>
</div>
